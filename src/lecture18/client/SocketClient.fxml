<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="chatPane"  prefHeight="480.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lecture18.client.SocketClientController">
    <children>
        <Button mnemonicParsing="false" onAction="#closeAction" prefHeight="40.0" prefWidth="320.0" stylesheets="@SocketClient.css" text="종료" />
        <ListView fx:id="chatView" focusTraversable="false" prefHeight="400.0" prefWidth="300.0" />
        <HBox prefHeight="40.0" prefWidth="320.0">
            <children>
                <TextField fx:id="messageField" focusTraversable="false" prefHeight="40.0" prefWidth="260.0" />
                <Button fx:id="sendButton" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#sendAction" prefHeight="40.0" prefWidth="60.0" text="전송" textAlignment="CENTER" />
            </children>
        </HBox>
    </children>
</VBox>
